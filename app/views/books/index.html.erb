<h1>Books</h1>
<p>Find me in app/views/books/index.html.erb</p>

<div>
  <h2>New book</h2>
    <%= form_with model:@book, url:'/books', local:true do |f| %>
      <div class="field">
        <p>Title</p>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <p>Body</p>
        <%= f.text_area :body %>
      </div>
      <%= f.submit 'Create Book' %>
    <% end %>
</div>