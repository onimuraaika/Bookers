<h1>editing Book</h1>

  <%= form_with model:@book, url:book_path(@book), local:true do |f| %>
    <div class="field">
      <p>Title</p>
       <%= f.text_field :title %>
    </div>
    <div class="field">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Update Book' %>
  <% end %>

<p><%= link_to "Show", book_path(@book.id) %></p>
<p><%= link_to "Back", books_path %></p>